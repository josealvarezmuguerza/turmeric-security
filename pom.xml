<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.ebayopensource.turmeric</groupId>
		<artifactId>turmeric-project</artifactId>
		<version>1.1.0.9</version>
	</parent>
	<groupId>org.ebayopensource.turmeric.security</groupId>
	<artifactId>turmeric-security-parent</artifactId>
	<version>1.1.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>
	<properties>
		<turmeric-runtime-version>1.1.0</turmeric-runtime-version>
		<turmeric-policy-version>1.0.0</turmeric-policy-version>
		<turmeric-jpa-utils-version>1.1.0</turmeric-jpa-utils-version>
		<cobertura.version>1.9.2</cobertura.version>
	</properties>
	  <scm>
	    <connection>scm:git:git@github.com:ebayopensource/turmeric-security.git</connection>
	    <developerConnection>scm:git:git@github.com:ebayopensource/turmeric-security.git</developerConnection>
	    <url>scm:git:git@github.com:ebayopensource/turmeric-security.git</url>
	  </scm>
	  
	<dependencyManagement>
		<dependencies>
			<dependency>
		      <groupId>org.ebayopensource.turmeric.utils</groupId>
		      <artifactId>TurmericUtils</artifactId>
		      <version>1.1.0</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
 	<build>
		<pluginManagement>
			<plugins>
                                <plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>cobertura-maven-plugin</artifactId>
					<version>2.5.1</version>
				</plugin>

			</plugins>   
		</pluginManagement>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.7</version>
				<configuration>
					<show>package</show>
					<excludePackageNames>*.impl.*</excludePackageNames>
				</configuration>
				<executions>
					<execution>
						<id>security-javadocs</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-clean-plugin</artifactId>
				<configuration>
					<filesets>
						<fileset>
							<directory>${basedir}/gen-src</directory>
						</fileset>
						<fileset>
							<directory>${basedir}/gen-meta-src</directory>
						</fileset>
						<fileset>
							<directory>${basedir}/build</directory>
						</fileset>
					</filesets>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<forkMode>always</forkMode>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<modules>
		<module>SecurityCommon</module>
		<module>SecurityErrorLibrary</module>
		<module>authentication</module>
		<module>authorization</module>
		<module>policy-enforcement</module>
		<module>ratelimiter</module>
		<module>security-war</module>
		<module>group-membership</module>
		<module>security-dist</module>
		<module>integration-tests</module>
	</modules>
	   <repositories>
	      <repository>
                 <id>ebaythird-party</id>
                 <name>eBayOpenSource Third Party Public</name>
                 <url>http://www.ebayopensource.org/nexus/content/groups/public/</url>
                 <releases>
                    <enabled>true</enabled>
                 </releases>
                 <snapshots>
                    <enabled>false</enabled>
                 </snapshots>
              </repository>
	      <repository>
		 <id>ebayopensource-releases</id>
		 <name>eBayOpenSource Release Repository</name>
		 <url>http://www.ebayopensource.org/nexus/content/repositories/releases</url>
		 <releases>
		    <enabled>true</enabled>
		 </releases>
		 <snapshots>
		    <enabled>false</enabled>
		 </snapshots>
	      </repository>
	      <repository>
		 <id>ebayopensource-snapshots</id>
		 <name>eBayOpenSource Snapshots Repository</name>
		 <url>http://www.ebayopensource.org/nexus/content/groups/all-snapshots</url>
		 <releases>
		    <enabled>false</enabled>
		 </releases>
		 <snapshots>
		    <enabled>true</enabled>
		    <updatePolicy>interval:30</updatePolicy>
		    <checksumPolicy>warn</checksumPolicy>
		 </snapshots>
	      </repository>
	   </repositories>
	   <pluginRepositories>
              <pluginRepository>
                 <id>ebaythird-party</id>
                 <name>eBayOpenSource Third Party Public</name>
                 <url>http://www.ebayopensource.org/nexus/content/groups/public/</url>
                 <releases>
                    <enabled>true</enabled>
                 </releases>
                 <snapshots>
                    <enabled>false</enabled>
                 </snapshots>
              </pluginRepository>
	      <pluginRepository>
		 <id>ebayopensource-releases</id>
		 <name>eBayOpenSource Release Repository</name>
		 <url>http://www.ebayopensource.org/nexus/content/repositories/releases</url>
		 <releases>
		    <enabled>true</enabled>
		 </releases>
		 <snapshots>
		    <enabled>false</enabled>
		 </snapshots>
	      </pluginRepository>
	      <pluginRepository>
		 <id>ebayopensource-snapshots</id>
		 <name>eBayOpenSource Snapshots Repository</name>
		 <url>http://www.ebayopensource.org/nexus/content/groups/all-snapshots</url>
		 <releases>
		    <enabled>false</enabled>
		 </releases>
		 <snapshots>
		    <enabled>true</enabled>
		    <updatePolicy>interval:30</updatePolicy>
		    <checksumPolicy>warn</checksumPolicy>
		 </snapshots>
	      </pluginRepository>
	   </pluginRepositories>
 <profiles>
    
    <profile>
      <id>it</id>
      <activation>
        <!-- Default behavior is to always build integration tests -->
        <activeByDefault>true</activeByDefault>
      </activation>
      <modules>
        <module>integration-tests</module>
      </modules>
    </profile>
  </profiles>
</project>
